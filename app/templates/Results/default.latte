{layout '../@layout.latte'}
{block #content}

{foreach $results as $result}
	{$result->id}, {$result->user->id}: {$result->result}, 
	{if ($result->status == 2 )}
		<a n:href="accept! $result->user_id" class="btn btn-xs btn-success">Satisfied</a>
		<a n:href="reject! $result->user_id" class="btn btn-xs btn-danger">Unsatisfied</a>
	{else}
		{$result->stat->status}
	{/if}
{/foreach}