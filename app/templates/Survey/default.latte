					{/label}
				{/foreach}
			</div>

			<div class="form-group">
				<div class="">
					{$_form['question3']->label}
				</div>
				{foreach $_form['question3']->items as $key => $label }
					{label question3:$key class => "radio-inline" }
						{input question3:$key}
						{$label}
					{/label}
				{/foreach}
			</div>

			<div class="form-group">
