{#content}
 	<div class="row">
		<div class="survey-form">
		
		<h1 class="row">{_survey.header}</h1>

		{form surveyForm class=>'form-horizontal'}

			<div class="form-group">
				<div>
					{$_form['question1']->label}
				</div>
				{foreach $_form['question1']->items as $key => $label }
					{label question1:$key class => "radio-inline" }
						{input question1:$key}
						{$label}
					{/label}
				{/foreach}
			</div>

			<div class="form-group">	
				<div class="">
					{$_form['question2']->label}
				</div>
				{foreach $_form['question2']->items as $key => $label }
					{label question2:$key class => "radio-inline" }
